.head
  .title
    = link_to'Insectagram', root_path
  .user
    .user-name
      taro
    .send
      = link_to "投稿する", "/posts/new", class: "post-link"

.research
  = search_form_for(@q, url:search_path) do |f|
    = f.search_field :name_cont, placeholder:"種名で検索"
    = f.collection_select :ordo_eq, @ordos, :id, :name, :include_blank => '分類を指定'
    = f.submit 
    
.posts
  - @posts.each do |post|
    .post
      = link_to image_tag post.image 
      = link_to '削除', "/posts/#{post.id}", method: :delete
      .post-info
        %p #{post.name} 
        %span #{post.text} lll
      
